{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "semanticCommits": "enabled",
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "groupName": "non-breaking",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch",
      "matchPackageNames": [
        "!eslint-import-resolver-node",
        "!eslint-config-{/,}**",
        "!eslint-plugin-{/,}**"
      ]
    }
  ]
}
