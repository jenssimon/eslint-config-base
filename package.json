{
  "name": "@jenssimon/eslint-config-base",
  "version": "0.0.0-development",
  "description": "A shareable ESLint configuration",
  "author": "Jens Simon <https://github.com/jenssimon>",
  "type": "module",
  "keywords": [
    "eslint",
    "eslintconfig"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/eslint-config-base"
  },
  "license": "MIT",
  "files": [
    "index.js"
  ],
  "exports": {
    ".": {
      "import": "./index.js"
    }
  },
  "scripts": {
    "lint": "eslint",
    "commit": "cz",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.6.0",
    "eslint-plugin-import-esm": "^3.0.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-sonarjs": "^4.0.0",
    "eslint-plugin-unicorn": "^63.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^10.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^10.0.0",
    "eslint-config-airbnb-extended": "^3.0.1",
    "husky": "^9.0.0",
    "lint-staged": "^16.0.0",
    "pinst": "^3.0.0",
    "semantic-release": "^25.0.0"
  },
  "peerDependencies": {
    "eslint": ">= 9",
    "eslint-config-airbnb-extended": ">= 3"
  },
  "packageManager": "yarn@4.12.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
