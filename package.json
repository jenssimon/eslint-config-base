{
  "name": "@jenssimon/eslint-config-base",
  "version": "0.0.0-development",
  "description": "A collection of shareable ESLint configurations",
  "main": "index.js",
  "author": "Jens Simon <https://github.com/jenssimon>",
  "keywords": [
    "eslint",
    "eslintconfig"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/eslint-config-base"
  },
  "license": "MIT",
  "files": [
    "/index.js",
    "/frontend.js",
    "/frontend-react.js",
    "/frontend-lit.js",
    "/lib"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.ts,.cjs,.mjs,.cts,.mts ./",
    "commit": "cz",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-import-esm": "^1.2.1",
    "eslint-plugin-jest": "^27.4.3",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-lit": "^1.9.1",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-redux": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.21.0",
    "eslint-plugin-unicorn": "^49.0.0",
    "eslint-plugin-wc": "^2.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.52.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "semantic-release": "^22.0.5"
  },
  "peerDependencies": {
    "eslint": "^7.32.0 || ^8.2.0"
  },
  "eslintConfig": {
    "extends": [
      "./index.js"
    ],
    "rules": {
      "unicorn/prefer-module": "off"
    }
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx}": "eslint"
  },
  "packageManager": "yarn@4.0.1",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
