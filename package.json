{
  "name": "@jenssimon/eslint-config-base",
  "version": "0.0.0-development",
  "description": "A collection of shareable ESLint configurations",
  "main": "index.js",
  "author": "Jens Simon <https://github.com/jenssimon>",
  "keywords": [
    "eslint",
    "eslintconfig"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jenssimon/eslint-config-base"
  },
  "license": "MIT",
  "files": [
    "/index.js",
    "/frontend.js",
    "/frontend-react.js",
    "/frontend-lit.js",
    "/lib"
  ],
  "scripts": {
    "lint": "eslint --fix --ext .js,.ts,.cjs,.mjs,.cts,.mts ./",
    "ci-test": "run-s \"ci-test:*\"",
    "ci-test:lint": "eslint ./",
    "commit": "cz",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-import-resolver-node": "0.3.7",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.2",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-lit": "1.8.3",
    "eslint-plugin-optimize-regex": "1.2.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-redux": "4.0.0",
    "eslint-plugin-sonarjs": "0.19.0",
    "eslint-plugin-unicorn": "47.0.0",
    "eslint-plugin-wc": "1.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.6",
    "@commitlint/config-conventional": "17.6.6",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.44.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "semantic-release": "21.0.6"
  },
  "peerDependencies": {
    "eslint": "^7.32.0 || ^8.2.0"
  },
  "eslintConfig": {
    "extends": [
      "./index.js"
    ],
    "rules": {
      "unicorn/prefer-module": "off"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint"
  },
  "packageManager": "yarn@3.6.1",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
